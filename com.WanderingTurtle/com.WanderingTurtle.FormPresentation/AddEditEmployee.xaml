<Window x:Class="com.WanderingTurtle.FormPresentation.AddEmployee"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Style="{DynamicResource WindowStyle}"
        mc:Ignorable="d"
        Title="AddEmployee" Height="300" Width="300" WindowStartupLocation="CenterScreen">
	<Grid  Margin="5">
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<Grid Grid.Row="0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="Auto" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="*" />
				<RowDefinition Height="*" />
				<RowDefinition Height="*" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>
			<Label Grid.Row="0" Grid.Column="0" Content="First Name" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" VerticalAlignment="Center" />
			<Label Grid.Row="1" Grid.Column="0" Content="Last Name"  VerticalContentAlignment="Center" HorizontalContentAlignment="Right" VerticalAlignment="Center" />
			<Label Grid.Row="2" Grid.Column="0" Content="Password"   VerticalContentAlignment="Center" HorizontalContentAlignment="Right" VerticalAlignment="Center" />
			<Label Grid.Row="3" Grid.Column="0" Content="User Level" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" VerticalAlignment="Center" />
			<TextBox  Grid.Row="0" Grid.Column="1" TabIndex="0" x:Name="TxtFirstName" VerticalContentAlignment="Center" Grid.ColumnSpan="2" />
			<TextBox  Grid.Row="1" Grid.Column="1" TabIndex="0" x:Name="TxtLastName"  VerticalContentAlignment="Center" Grid.ColumnSpan="2" />
			<TextBox  Grid.Row="2" Grid.Column="1" TabIndex="0" x:Name="TxtPassword"  VerticalContentAlignment="Center" />
			<CheckBox Grid.Row="2" Grid.Column="2" TabIndex="4" x:Name="ChkActiveEmployee" IsChecked="True"  Content="Active" HorizontalAlignment="Center" Margin="5,0" VerticalAlignment="Center" IsEnabled="False" />
			<!-- ReSharper disable once Xaml.BindingWithoutContextNotResolved -->
			<ComboBox Grid.Row="3" Grid.Column="1" TabIndex="5" x:Name="CboUserLevel" ItemsSource="{Binding Path=RetrieveUserLevelList}" VerticalContentAlignment="Center" Grid.ColumnSpan="2" />
		</Grid>
		<Button Grid.Row="1" Content="Submit" Click="btnSubmitEmployee_Click" />
	</Grid>
</Window>