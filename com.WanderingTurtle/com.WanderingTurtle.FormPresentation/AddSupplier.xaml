        xmlns:s="clr-namespace:System;assembly=mscorlib"
        Title="Add Supplier"  Height="337.731" Width="723.319"
		Loaded="Window_Loaded" Closed="Window_Closed"
		WindowStartupLocation="CenterScreen">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="567.2" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<Grid Grid.Column="0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="62*" />
				<ColumnDefinition Width="109*" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="42*" />
				<RowDefinition Height="40*" />
				<RowDefinition Height="37*" />
				<RowDefinition Height="37*" />
				<RowDefinition Height="39*" />
				<RowDefinition Height="372*" />
			</Grid.RowDefinitions>
		</Grid>
		<Grid Grid.Column="1">
			<Grid.RowDefinitions>
				<RowDefinition Height="44*" />
				<RowDefinition Height="37*" />
				<RowDefinition Height="40*" />
				<RowDefinition Height="39*" />
				<RowDefinition Height="407*" />
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="7*" />
				<ColumnDefinition Width="12*" />
			</Grid.ColumnDefinitions>
		</Grid>
		<Label Content="Company Name" HorizontalAlignment="Left" Margin="39.021,12,0,0" Grid.Row="0" Grid.Column="1" VerticalAlignment="Top" Height="34" Width="108" />
		<Label Content="First Name" HorizontalAlignment="Left" Margin="15,12,0,0" Grid.Row="0" Grid.Column="0" VerticalAlignment="Top" Height="34" Width="108" />
		<TextBox x:Name="txtFirstName" HorizontalAlignment="Left" Height="30" Margin="135,15,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Row="0" Grid.Column="0" Width="183" />
		<Label Content="Last Name" HorizontalAlignment="Left" Margin="15,48,0,0" Grid.Row="0" Grid.Column="0" VerticalAlignment="Top" Height="34" Width="108" />
		<TextBox x:Name="txtLastName" HorizontalAlignment="Left" Height="30" Margin="135,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Row="0" Grid.Column="0" Width="183" />
		<Label Content="Address 1" HorizontalAlignment="Left" Margin="15,82,0,0" Grid.Row="0" Grid.Column="0" VerticalAlignment="Top" Height="34" Width="108" />
		<TextBox x:Name="txtAddress1" HorizontalAlignment="Left" Height="30" Margin="135,85,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Row="0" Grid.Column="0" Width="183" />
