		<TextBox x:Name="txtCompanyName" HorizontalAlignment="Left" Height="30" Margin="160.021,12,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Row="0" Grid.Column="1" Width="192" MaxLength="15" RenderTransformOrigin="0.487,-0.012" />
		<Label Content="Email Address" HorizontalAlignment="Left" Margin="39.021,84,0,0" Grid.Row="0" Grid.Column="1" VerticalAlignment="Top" Height="34" Width="108" />
