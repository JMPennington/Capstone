<Window x:Class="com.WanderingTurtle.FormPresentation.CancelBooking"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cancel Booking" Height="350" Width="600">
    <Grid Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="367*"/>
            <ColumnDefinition Width="19*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="lblcancelBooking_Generic" Content="Cancel the following booking?" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="14"/>
        <TextBlock x:Name="txtBlock_cancel" HorizontalAlignment="Left" Margin="10,86,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="174" Width="572" Background="#FFF1EEEE" Grid.ColumnSpan="2"/>
        <Button x:Name="btnConfirmCancel" Content="Cancel" HorizontalAlignment="Left" Margin="498,281,0,0" VerticalAlignment="Top" Width="84" Height="28" FontSize="10" Grid.ColumnSpan="2" Click="btnConfirmCancel_Click"/>
        <Label x:Name="lblCancelGuestInfo" Content="Guest: " HorizontalAlignment="Left" Margin="10,39,0,0" VerticalAlignment="Top" Width="553" Height="42" FontSize="14"/>

    </Grid>
</Window>
