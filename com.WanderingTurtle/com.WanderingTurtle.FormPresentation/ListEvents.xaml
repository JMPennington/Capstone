<UserControl x:Class="com.WanderingTurtle.FormPresentation.ListEvents"
             Style="{DynamicResource UserControlStyle}"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ListView Grid.Row="0" x:Name="lvEvents" ItemsSource="{Binding }" SelectionChanged="lvEvents_SelectionChanged" GridViewColumnHeader.Click="lvEventListHeaderClick">
            <ListView.View>
                <GridView>
                    <!-- Here we bind the names that are held within the Event objects to the fields. This will allow us to present an
                    object to the listview and have it auto-populate with the objects data. Notice that the binding names are IDENTICAL
                    to the datafields within our Event object.-->
                    <GridViewColumn Width="100" Header="Event Type"         DisplayMemberBinding="{Binding EventTypeName}" />
                    <GridViewColumn Width="140" Header="Event Name"         DisplayMemberBinding="{Binding EventItemName}" />
                    <GridViewColumn Width="100" Header="Transportation"     DisplayMemberBinding="{Binding TransportString}" />
                    <GridViewColumn Width="100" Header="On-Site"            DisplayMemberBinding="{Binding OnSiteString}" />
                </GridView>
            </ListView.View>
        </ListView>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Button  Grid.Column="0" Margin="{DynamicResource Button Spacing}" x:Name="btnAddEvent"     Content="Add"                Click="btnAddEvent_Click" />
            <Button  Grid.Column="1" Margin="{DynamicResource Button Spacing}" x:Name="btnArchiveEvent" Content="Delete"             Click="btnArchiveEvent_Click" IsEnabled="False" />
            <Button  Grid.Column="2" Margin="{DynamicResource Button Spacing}" x:Name="btnEditEvent"    Content="Edit"               Click="btnEditEvent_Click"    IsEnabled="False" />
            <Button  Grid.Column="3" Margin="{DynamicResource Button Spacing}" x:Name="btnViewDetails"  Content="View Event Details" Click="btnViewEventDetails"   IsEnabled="False" />
            <TextBox Grid.Column="4" Margin="{DynamicResource Button Spacing}" x:Name="txtSearchInput" />
            <Button  Grid.Column="5" x:Name ="btnSearch" Content="Search" Click="btnSearch_Click" />
        </Grid>
    </Grid>
</UserControl>