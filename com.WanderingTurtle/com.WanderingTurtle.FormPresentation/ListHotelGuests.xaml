<UserControl x:Class="com.WanderingTurtle.FormPresentation.ListHotelGuests"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008">
    <Grid Background="#FFE5E5E5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ListView Grid.Row="0" x:Name="lvHotelGuestList" ItemsSource="{Binding hotelGuestList}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width ="100" Header="First Name"    DisplayMemberBinding="{Binding FirstName}" />
                    <GridViewColumn Width ="100" Header="Last Name"     DisplayMemberBinding="{Binding LastName}" />
                    <GridViewColumn Width ="150" Header="Address 1"     DisplayMemberBinding="{Binding Address1}" />
                    <GridViewColumn Width ="150" Header="Address 2"     DisplayMemberBinding="{Binding Address2}" />
                    <GridViewColumn Width ="100" Header="ZIP"           DisplayMemberBinding="{Binding CityState.Zip}" />
                    <GridViewColumn Width ="100" Header="Phone Number"  DisplayMemberBinding="{Binding PhoneNumber}" />
                    <GridViewColumn Width ="150" Header="E-Mail"        DisplayMemberBinding="{Binding EmailAddress}" />
                </GridView>
            </ListView.View>
        </ListView>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <DockPanel Grid.Column="1">
                <Button Padding="5" x:Name="btnAddGuest"    Content="Add Guest"    Click="btnAddGuest_Click" />
                <Button Padding="5" x:Name="btnRefreshList" Content="Refresh List" Click="btnRefreshList_Click" />
            </DockPanel>
        </Grid>
    </Grid>
</UserControl>