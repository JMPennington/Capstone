<UserControl x:Class="com.WanderingTurtle.FormPresentation.ListHotelGuests"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0" x:Name="lvHotelGuestList">
            <DataGrid.Columns>
                <DataGridTextColumn Width="50" Header="ID"               Binding="{Binding HotelGuestID}" />
                <DataGridTextColumn Width="80" Header="Room #"           Binding="{Binding GuestRoomNum}" />
                <DataGridTextColumn Width="150" Header="Date Registered" Binding="{Binding DateOpened, StringFormat='{}{0:D}'}" />
                <DataGridTextColumn Width ="100" Header="Last Name"      Binding="{Binding GuestLastName}" />
                <DataGridTextColumn Width ="100" Header="First Name"     Binding="{Binding GuestFirstName}" />
            </DataGrid.Columns>
        </DataGrid>
        <WrapPanel Grid.Row="1">
            <Button Margin="{DynamicResource Button Spacing}" x:Name="btnRegisterGuest" Content="Register Guest" Click="btnRegisterGuest_Click" />
            <Button Margin="{DynamicResource Button Spacing}" x:Name="btnViewGuest"     Content="View Guest"     Click="btnViewGuest_Click" />
        </WrapPanel>
    </Grid>
</UserControl>