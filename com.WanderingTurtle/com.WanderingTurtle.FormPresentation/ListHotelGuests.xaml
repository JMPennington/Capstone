<UserControl x:Class="com.WanderingTurtle.FormPresentation.ListHotelGuests"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ListView Grid.Row="0" x:Name="lvHotelGuestList" ItemsSource="{Binding hotelGuestList}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="50" Header="ID" DisplayMemberBinding="{Binding HotelGuestID}" />
                    <GridViewColumn Width ="100" Header="First Name"    DisplayMemberBinding="{Binding FirstName}" />
                    <GridViewColumn Width ="100" Header="Last Name"     DisplayMemberBinding="{Binding LastName}" />
                    <GridViewColumn Width ="150" Header="Address 1"     DisplayMemberBinding="{Binding Address1}" />
                    <GridViewColumn Width ="50" Header="Address 2"     DisplayMemberBinding="{Binding Address2}" />
                    <GridViewColumn Width ="100" Header="ZIP"           DisplayMemberBinding="{Binding CityState.Zip}" />
                    <GridViewColumn Width ="100" Header="Phone Number"  DisplayMemberBinding="{Binding PhoneNumber}" />
                    <GridViewColumn Width ="150" Header="E-Mail"        DisplayMemberBinding="{Binding EmailAddress}" />
                </GridView>
            </ListView.View>
        </ListView>
        <WrapPanel Grid.Row="1">
            <Button Margin="{DynamicResource Button Margin}" Padding="{DynamicResource Button Padding}" x:Name="btnAddGuest"    Content="Register Guest"    Click="btnAddGuest_Click" />

            <Button Margin="{DynamicResource Button Margin}" Padding="{DynamicResource Button Padding}" x:Name="btnViewGuest"    Content="View Guest"    Click="btnViewGuest_Click" />
            <Button Margin="{DynamicResource Button Margin}" Padding="{DynamicResource Button Padding}" x:Name="btnCheckOutGuest"    Content="Check Out Guest"    Click="btnCheckOutGuest_Click" />
        </WrapPanel>
    </Grid>
</UserControl>