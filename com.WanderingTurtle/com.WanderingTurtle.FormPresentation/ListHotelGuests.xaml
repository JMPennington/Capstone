<UserControl x:Class="com.WanderingTurtle.FormPresentation.ListHotelGuests"
             Style="{DynamicResource UserControlStyle}"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ListView Grid.Row="0" x:Name="lvHotelGuestList" ItemsSource="{Binding hotelGuestList}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="30" Header="ID" DisplayMemberBinding="{Binding HotelGuestID}" />
                    <GridViewColumn Width="50" Header="Room #"    DisplayMemberBinding="{Binding GuestRoomNum}"/>
                    <GridViewColumn Width="150" Header="Date Registered" DisplayMemberBinding="{Binding DateOpened, StringFormat='{}{0:D}'}" />
                    <GridViewColumn Width ="100" Header="Last Name"     DisplayMemberBinding="{Binding GuestLastName}" />
                    <GridViewColumn Width ="100" Header="First Name"    DisplayMemberBinding="{Binding GuestFirstName}" />

                </GridView>
            </ListView.View>
        </ListView>
        <WrapPanel Grid.Row="1">

            <Button Margin="{DynamicResource Button Margin}" Padding="{DynamicResource Button Padding}" x:Name="btnRegisterGuest"    Content="Register Guest"    Click="btnRegisterGuest_Click" />
            <Button Margin="{DynamicResource Button Margin}" Padding="{DynamicResource Button Padding}" x:Name="btnViewGuest"    Content="View Guest"    Click="btnViewGuest_Click" />

        </WrapPanel>
    </Grid>
</UserControl>