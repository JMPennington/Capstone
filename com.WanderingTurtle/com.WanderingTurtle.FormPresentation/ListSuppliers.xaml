<UserControl x:Class="com.WanderingTurtle.FormPresentation.ListSuppliers"
             Style="{DynamicResource UserControlStyle}"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ListView Grid.Row="0" x:Name="lvSuppliersList" GridViewColumnHeader.Click="lvSupplierListHeaderClick">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width ="175" Header="Company Name" DisplayMemberBinding="{Binding CompanyName}" />
                    <GridViewColumn Width ="125" Header="First Name" DisplayMemberBinding="{Binding FirstName}" />
                    <GridViewColumn Width ="150" Header="Last Name" DisplayMemberBinding="{Binding LastName}" />
                    <GridViewColumn Width ="150" Header="Address" DisplayMemberBinding="{Binding Address1}" />
                    <GridViewColumn Width ="150" Header="Email Address" DisplayMemberBinding="{Binding EmailAddress}" />
                    <GridViewColumn Width ="90" Header="Phone Number" DisplayMemberBinding="{Binding PhoneNumber}" />
                </GridView>
            </ListView.View>
        </ListView>
        <WrapPanel Grid.Row="1">
            <Button Margin="{DynamicResource Button Spacing}" x:Name="btnAddSupplier" Content="Add Supplier" Click="btnAddSupplier_Click" />
            <Button Margin="{DynamicResource Button Spacing}" x:Name="btnDelete" Content="Delete Supplier" Click="btnDelete_Click" />
            <Button Margin="{DynamicResource Button Spacing}" x:Name="btnUpdate" Content="Update Supplier" Click="btnUpdate_Click" />
        </WrapPanel>
    </Grid>
</UserControl>