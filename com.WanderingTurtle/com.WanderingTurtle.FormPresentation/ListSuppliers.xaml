<UserControl x:Class="com.WanderingTurtle.FormPresentation.ListSuppliers"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0" x:Name="lvSuppliersList">
            <DataGrid.Columns>
                <DataGridTextColumn Width ="175" Header="Company Name"  Binding="{Binding CompanyName}" />
                <DataGridTextColumn Width ="125" Header="First Name"    Binding="{Binding FirstName}" />
                <DataGridTextColumn Width ="150" Header="Last Name"     Binding="{Binding LastName}" />
                <DataGridTextColumn Width ="150" Header="Address"       Binding="{Binding Address1}" />
                <DataGridTextColumn Width ="150" Header="Email Address" Binding="{Binding EmailAddress}" />
                <DataGridTextColumn Width ="90"  Header="Phone Number"  Binding="{Binding PhoneNumber}" />
            </DataGrid.Columns>
        </DataGrid>
        <WrapPanel Grid.Row="1">
            <Button Margin="{DynamicResource Button Spacing}" x:Name="btnAddSupplier" Content="Add Supplier" Click="btnAddSupplier_Click" />
            <Button Margin="{DynamicResource Button Spacing}" x:Name="btnDelete" Content="Delete Supplier"   Click="btnDelete_Click" />
            <Button Margin="{DynamicResource Button Spacing}" x:Name="btnUpdate" Content="Update Supplier"   Click="btnUpdate_Click" />
        </WrapPanel>
    </Grid>
</UserControl>