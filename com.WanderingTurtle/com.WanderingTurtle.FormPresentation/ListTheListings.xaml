<UserControl x:Class="com.WanderingTurtle.FormPresentation.ListTheListings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ListView Grid.Row="0" x:Name="lvEvents" SelectionChanged="ListView_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="140" Header="Event Name" DisplayMemberBinding="{Binding EventItemName}" />
                    <GridViewColumn Width="100" Header="Event Start Date" DisplayMemberBinding="{Binding EventStartDate}" />
                    <GridViewColumn Width="100" Header="Event End Date" DisplayMemberBinding="{Binding EventEndDate}" />
                    <GridViewColumn Width="60" Header="Quantity" DisplayMemberBinding="{Binding Quantity}" />
                    <GridViewColumn Width="100" Header="Price" DisplayMemberBinding="{Binding Price}" />
                    <GridViewColumn Width="100" Header="Reserved" DisplayMemberBinding="{Binding CurrentNumGuests}" />
                </GridView>
            </ListView.View>
        </ListView>
        <WrapPanel Grid.Row="1">
            <Button Margin="{DynamicResource Button Margin}" Padding="{DynamicResource Button Padding}" x:Name="btnAddListing" Content="Add Listing" />
        </WrapPanel>
    </Grid>
</UserControl>