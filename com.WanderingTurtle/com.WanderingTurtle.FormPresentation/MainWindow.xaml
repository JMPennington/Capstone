<metro:MetroWindow x:Class="com.WanderingTurtle.FormPresentation.MainWindow"
				xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
				xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	 			xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
				xmlns:views="clr-namespace:com.WanderingTurtle.FormPresentation.Views"
				Title="MainWindow" Height="525" Width="950" MinHeight="125"
				WindowStartupLocation="CenterScreen" ResizeMode="CanResizeWithGrip">
    <metro:TransitioningContentControl x:Name="MainContent" Transition="Default" Margin="{DynamicResource Grid Margin}">
        <views:SplashScreen />
    </metro:TransitioningContentControl>
    <metro:MetroWindow.RightWindowCommands>
        <metro:WindowCommands>
            <Button Content="Sign In/Out" Click="BtnSignInOut_Click" />
        </metro:WindowCommands>
    </metro:MetroWindow.RightWindowCommands>
</metro:MetroWindow>