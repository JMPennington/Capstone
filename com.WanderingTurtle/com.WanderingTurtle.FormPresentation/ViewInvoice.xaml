<Window x:Class="com.WanderingTurtle.FormPresentation.ViewInvoice"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="View Invoice" Height="380" Width="700" WindowStartupLocation="CenterScreen" Background="{DynamicResource Standard}">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" x:Name="lblGeneralViewInvoice" Content="Guest Invoice Information" FontSize="16" />

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />

            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="90" />
                <ColumnDefinition Width="321*" />
                <ColumnDefinition Width="271*" />
            </Grid.ColumnDefinitions>

            <Label Grid.Row="0" Grid.Column="0" x:Name="lblGuestName" Content="Guest Name:" HorizontalAlignment="Right" VerticalAlignment="Center" Height="26" Margin="0,4" Width="80"  />
            <Label Grid.Row="0" Grid.Column="1" x:Name="lblGuestNameLookup" VerticalContentAlignment="Center" Margin="0,1" />
            <Label  Grid.Row="0" Grid.Column="2" x:Name="lblGuestID"  VerticalContentAlignment="Center" Margin="47,2,31,0" />
            <Label Grid.Row="1" Grid.Column="0" x:Name="lblCheckInDate" Content="Checked In:" HorizontalAlignment="Right"  VerticalAlignment="Center" Height="26" Margin="0,4" Width="75" />
            <Label  Grid.Row="1" Grid.Column="2" x:Name="lblInvoiceID"  VerticalContentAlignment="Center" Margin="47,2,31,0" />
            <Label Grid.Row="2" Grid.Column="0" x:Name="lblRoomNum" Content="Room #:" HorizontalAlignment="Right" VerticalAlignment="Center" Height="26" Margin="0,4" Width="60" />
        </Grid>
        <Grid Grid.Row="2" Margin="0,0,0,2.807">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Label    Grid.Row="0" Content="Bookings:" FontSize="14" />
            <ListView Grid.Row="1" x:Name="lvCustomerBookings" >
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width ="60" Header="Booking #" DisplayMemberBinding="{Binding BookingID}" />
                        <GridViewColumn Width ="150" Header="Event Date" DisplayMemberBinding="{Binding StartDate, StringFormat='{}{0:D}'}" />
                        <GridViewColumn Width ="75" Header="Start Time" DisplayMemberBinding="{Binding StartDate, StringFormat='{}{0:t}'}" />
                        <GridViewColumn Width ="175" Header="Event Name" DisplayMemberBinding="{Binding EventItemName}" />
                        <GridViewColumn Width ="50" Header="Quantity" DisplayMemberBinding="{Binding Quantity}" />
                        <GridViewColumn Width ="75" Header="Ticket Price" DisplayMemberBinding="{Binding Price, StringFormat='{}{0:C}'}"  />
                        <GridViewColumn Width ="60" Header="Total Due" DisplayMemberBinding="{Binding TotalPrice, StringFormat='{}{0:C}'}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
        <Button Grid.Row="3" x:Name="btnAddBookingAdd" Content="Add Booking" Padding="{DynamicResource Button Padding}" Margin="0,0,579,0" Height="28" VerticalAlignment="Top" Click="btnAddBookingAdd_Click" />
    </Grid>
</Window>
