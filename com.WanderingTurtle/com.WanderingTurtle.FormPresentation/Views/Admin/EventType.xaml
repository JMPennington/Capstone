<UserControl x:Class="com.WanderingTurtle.FormPresentation.Views.Admin.EventType"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:ClassModifier="internal">
    <Grid Height="175">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" x:Name="lblTitle" FontSize="16" FontWeight="Bold" Content="Event Type Administration" />
        <Grid  Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.Column="0" HorizontalContentAlignment="Right" Content="Add Event Type:" />
            <Label Grid.Row="1" Grid.Column="0" HorizontalContentAlignment="Right" Content="Edit Event Type:" />
            <Label Grid.Row="2" Grid.Column="0" HorizontalContentAlignment="Right" Content="Archive Event Type:" />
            <TextBox  Grid.Row="0" Grid.Column="1" x:Name="txtEventType" />
            <TextBox  Grid.Row="1" Grid.Column="1" x:Name="txtAccessType" />
            <ComboBox Grid.Row="2" Grid.Column="1" x:Name="cboArchiveEvent" />
            <Label Grid.Row="0" Grid.Column="2" Content="Select Event Type to Edit:" />
            <ListBox Grid.Row="1" Grid.Column="2" Grid.RowSpan="2" x:Name="listbEventTypes" />
        </Grid>
        <Grid Grid.Row="2" MaxWidth="500">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="Submit" />
            <Separator Grid.Column="1" Style="{DynamicResource ButtonSeparator}" />
            <Button Grid.Column="2" Content="Reset" />
        </Grid>
    </Grid>
</UserControl>