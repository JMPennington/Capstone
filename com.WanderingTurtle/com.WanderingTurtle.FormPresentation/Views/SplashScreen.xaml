<UserControl
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Custom="http://metro.mahapps.com/winfx/xaml/controls"
        x:Class="com.WanderingTurtle.FormPresentation.Views.StartupScreen">
    <UserControl.Resources>
        <Style x:Key="Header" TargetType="{x:Type Label}">
            <Setter Property="FontFamily" Value="Comic Sans MS" />
            <Setter Property="FontSize"   Value="50" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
        <Style x:Key="SignIn" TargetType="{x:Type Button}" BasedOn="{StaticResource Button}">
            <Setter Property="FontSize" Value="50px" />
        </Style>
    </UserControl.Resources>
    <Grid HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label  Grid.Row="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Style="{DynamicResource Header}" Content="Welcome to the Wandering Turtle" />
        <Button Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Click="BtnSignIn_Click" Content="Please Sign In" Style="{DynamicResource SignIn}" />
    </Grid>
</UserControl>