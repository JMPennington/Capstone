<UserControl
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Background="#FF006AA0"
        x:Class="com.WanderingTurtle.FormPresentation.Views.StartupScreen">
    <UserControl.Resources>
        <Style x:Key="SignIn" TargetType="{x:Type Button}" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="FontSize" Value="50px" />
        </Style>
        <Thickness x:Key="Local Margin">10</Thickness>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Image Margin="{DynamicResource Local Margin}" Source="/WanderingTurtle;component/Resources/Logo_White.png" />
        <Separator Grid.Row="1" />
        <Button Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{DynamicResource Local Margin}" Click="BtnSignInClick" Content="Please Sign In" Style="{DynamicResource SignIn}" />
    </Grid>
</UserControl>