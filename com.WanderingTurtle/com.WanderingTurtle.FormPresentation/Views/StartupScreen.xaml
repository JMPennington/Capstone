<UserControl
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="com.WanderingTurtle.FormPresentation.Views.StartupScreen">
    <Grid>
        <Grid.Background >
            <ImageBrush Stretch="Fill"  ImageSource="/WanderingTurtle;component/Resources/SplashImage.jpg" />
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="30" />
            <RowDefinition Height="415" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="700" />
            <ColumnDefinition Width="75" />
            <ColumnDefinition Width="101" />
            <ColumnDefinition Width="74" />
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="1" Content="User ID" FontWeight="Bold" HorizontalAlignment="Right" Height="Auto" />
        <TextBox Grid.Column="2" Grid.Row="0"  x:Name="txtUserName" HorizontalAlignment="Left" Width="100" Height="Auto" />
        <Label Grid.Row="1" Grid.Column="1" Content="Password" FontWeight="Bold" HorizontalAlignment="Right" Height="Auto" />
        <PasswordBox PasswordChar="*"   Grid.Column="2" Grid.Row="1"  x:Name="txtPassword" HorizontalAlignment="Left" Width="100" Height="Auto"/>
        <Button Grid.Column="2" Grid.Row="2" Click="BtnSignInClick" Content="Submit" Width="75" HorizontalAlignment="Left" />
    </Grid>
</UserControl>