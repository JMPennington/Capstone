<UserControl x:Class="com.WanderingTurtle.FormPresentation.Views.TabContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:model="clr-namespace:com.WanderingTurtle.FormPresentation.Models"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Metro="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TabControl Grid.Row="1" x:Name="MainTabControl" Margin="{DynamicResource Grid Margin}" />
        <StatusBar Grid.Row="2">
            <StatusBarItem Content="Current User: "></StatusBarItem>
            <StatusBarItem Content="{Binding }"></StatusBarItem>
        </StatusBar>
    </Grid>
</UserControl>